        <li><a href="<?php echo URL::to('teams/create'); ?>">Create a Team</a>
    </ul>
</nav>

<h1>All the Teams</h1>

<!-- will be used to show any messages -->
<?php if(Session::has('message')): ?>
    <div class="alert alert-info"><?php echo Session::get('message'); ?></div>
<?php endif; ?>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>ID</td>
            <td>Team Name</td>
            <td>Team Code</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
    <?php foreach($teams as $key => $value): ?>
        <tr>
            <td><?php echo $value->id; ?></td>
            <td><?php echo $value->name; ?></td>
            <td><?php echo $value->code; ?></td>

            <!-- show, edit, and delete buttons -->
            <td>
                 <!-- show the team (uses the show method found at GET /teams/{id} -->
                <a class="btn btn-small btn-success" href="<?php echo e(URL::to('teams/' . $value->id)); ?>">Show this Team</a>

                <!-- edit this team (uses the edit method found at GET /teams/{id}/edit -->
                <a class="btn btn-small btn-info" href="<?php echo e(URL::to('teams/' . $value->id . '/edit')); ?>">Edit this Team</a>

                <?php echo Form::open(array('url' => 'teams/' . $value->id, 'class' => 'btn')); ?>

                    <?php echo Form::hidden('_method', 'DELETE'); ?>

                    <?php echo Form::submit('Delete this Team', array('class' => 'btn btn-warning')); ?>

                <?php echo Form::close(); ?>


            </td>
        </tr>
    <?php endforeach; ?>
    </tbody>
</table>

