            <!-- show, edit, and delete buttons -->
            <td>
                 <!-- show the team members (uses the show method found at GET /teams/{id} -->
                <a class="btn btn-small btn-success" href="<?php echo e(URL::to('teams/' . $team->id . '/showmembers')); ?>">Show Members</a>

                <!-- edit this team (uses the edit method found at GET /teams/{id}/edit -->
                <a class="btn btn-small btn-info" href="<?php echo e(URL::to('teams/' . $team->id . '/edit')); ?>">Edit this Team</a>

                <?php echo Form::open(array('url' => 'teams/' . $team->id . '/delete', 'class' => 'btn')); ?>

                    <?php echo Form::hidden('_method', 'DELETE'); ?>

                    <?php echo Form::submit('Delete this Team', array('class' => 'btn btn-warning')); ?>

                <?php echo Form::close(); ?>


